{
	"compilerOptions": {
		"target": "es2021",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"lib": ["es2021"],
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"exclude": [
		"coverage"
	]
}